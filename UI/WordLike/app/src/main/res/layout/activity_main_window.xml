<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainWindowInput"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainWindow">


    <EditText
        android:id="@+id/SearchText"
        android:layout_width="244dp"
        android:layout_height="53dp"
        android:layout_marginTop="284dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toTopOf="@+id/NotificationWindowButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/WordBookWindowButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="98dp"
        android:text="단어장목록"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WithdrawlButton" />

    <Button
        android:id="@+id/NotificationWindowButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="59dp"
        android:text="알림설정"
        app:layout_constraintBottom_toTopOf="@+id/WithdrawlButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchText" />

    <Button
        android:id="@+id/WithdrawlButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="47dp"
        android:text="회원탈퇴"
        app:layout_constraintBottom_toTopOf="@+id/WordBookWindowButton"
        app:layout_constraintEnd_toEndOf="@+id/WordBookWindowButton"
        app:layout_constraintStart_toStartOf="@+id/WordBookWindowButton"
        app:layout_constraintTop_toBottomOf="@+id/NotificationWindowButton" />

    <SearchView
        android:id="@+id/SearchButton"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/SearchText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411" />

</android.support.constraint.ConstraintLayout>